<div class="row">
  <div class="span8">
      <small>
        submitted <%= time_ago_in_words(@post.created_at) %> ago by 
        <%= @comment.user.name %>
    </small>
    <p><%= markdown @comment.body %></p>
  </div>
  <div class="span4">
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_comment_path(@comment), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>
